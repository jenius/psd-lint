.results
  max-width: 900px
  margin: 0 auto

.result-count
  display: inline-block
  background: $seafoam
  color: #FFF;
  font-weight: 100
  text-align: center
  adaptive-block(width, height, line-height)

.result-title
  margin-left: $block_size * .5
  display: inline-block
  color: $grey
  font-weight: 200

.result .expand
  float: right
  text-align: right
  color: $grey
  cursor: pointer
  adaptive-block(width, line-height)
  &:after
    content: "+"

.result.expanded .expand
  &:after
    content: "-"

.result
  margin: $block_size*0.25

.expandable-content
  margin: $block_size*0.25 0

.warning
  color:        rgb(158, 62, 62)
  width:        $warning_block
  height:       $warning_block
  display:      block
  font-size:    21px
  text-align:   center
  background:   rgb(255, 116, 116)
  line-height:  $warning_block
  margin-right: 10px;
  border-radius: 5px;
