$block_size = 60px

.results
  max-width: 900px
  margin: 70px auto
  background: $off_white
  padding: $block_size * 0.5
  position: relative

#twitter-widget-0
  position: absolute
  right: 20px
  top: 45px

.grade
  font-size: 30px
  font-weight: bold
  text-align: center
  border-bottom: solid 1px #e6e6e6
  margin: 0 auto
  width: 96%
  padding: 10px 0 30px
  span
    color: $orange
    margin-left: 10px

.result-count, .result-grade, .warning
  color: #FFF
  width: $block_size
  height: $block_size
  display: inline-block
  background: $seafoam
  text-align: center
  font-weight: bold
  font-size: 21px
  line-height: $block_size
  box-sizing: border-box
  border: solid 2px $seafoam

.result-title
  color $grey
  font-weight: bold
  font-size: 21px
  display: inline-block
  margin-left: $block_size * 0.35

.result-grade
  margin-right: $block_size * 0.35
  border-radius 3px
  color $grey
  background: transparent

.result .expand
  top:        0
  width:      100%
  color:      $grey
  cursor:     pointer
  position:   absolute
  text-align: right
  adaptive-block(line-height)
  color: $orange
  font-weight: bold
  font-size: 31px
  &:after
    content: "+"

.result.expanded .expand
  &:after
    content: "-"

.result
  margin:   $block_size*0.25
  position: relative
  border-bottom: solid 1px #e6e6e6
  padding-bottom: 18px

.expandable-content
  margin: $block_size*0.25 0
  padding-left: $block_size * 1.35

.expandable-row .expandable-content
  padding-left: 0

.warning
  background: transparent
  border-color: $orange
  color: $orange
  margin-right: $block_size * 0.35
  border-radius: 3px
  position: relative
  z-index: 100
  &.small
    height: 30px
    width: 30px
    line-height: 27px
    margin-right: 10px

.result-row.warning
  top:      0
  left:     0
  z-index:  1
  position: absolute
