.results
  max-width: 900px
  margin: 0 auto

.result-count
  display: inline-block
  background: $seafoam
  color: #FFF;
  font-weight: 100
  text-align: center
  adaptive-block(width, height, line-height)

.result-title
  margin-left: $block_size * .5
  display: inline-block
  color: $grey
  font-weight: 200

.result .expand
  float: right
  text-align: right
  color: $grey
  cursor: pointer
  adaptive-block(width, line-height)

.result
  margin: $block_size*0.25

.expandable-content
  margin: $block_size*0.25 0
