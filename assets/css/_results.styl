.results
  max-width: 900px
  margin: 0 auto

.result-count
  display: inline-block
  background: $seafoam
  color: #FFF;
  font-weight: 100
  text-align: center
  adaptive-block(width, height, line-height)

.result-title
  margin-left: $block_size * .5
  display: inline-block
  color: $grey
  font-weight: 200

.result-grade
  top:      0
  left:     0
  position: absolute

.result .expand
  top:        0
  width:      100%
  color:      $grey
  cursor:     pointer
  position:   absolute
  text-align: right
  adaptive-block(line-height)
  &:after
    content: "+"

.result.expanded .expand
  &:after
    content: "-"

.result
  margin:   $block_size*0.25
  position: relative

.expandable-content
  margin: $block_size*0.25 0

.warning
  color:        rgb(158, 62, 62)
  width:        $warning_block
  height:       $warning_block
  display:      block
  font-size:    21px
  text-align:   center
  background:   rgb(255, 116, 116)
  line-height:  $warning_block
  margin-right: 10px;
  border-radius: 5px;

.result-row.warning
  top:      0
  left:     0
  position: absolute
