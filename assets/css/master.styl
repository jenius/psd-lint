global-reset()

@import "_variables"
@import "_mixins"
@import "_results"
@import "_layers"
@import "_fonts"
@import "_upload"
@import "_processing"
@import "_footer"

html
  background: $seafoam
  font-family: 'Open Sans', sans-serif;
  transition(all  300ms)
  -webkit-font-smoothing: antialiased

.cl
  clear: both

.left
  float: left

.right
  float: right

.subheadline
  color $grey
  font-size: 19px
  line-height: 26px

.text-orb
  border-radius: 4px
  font-size: 16px
  color: $grey
  font-weight: 200
  padding: 6px 12px
  display: inline-block
  border: solid 2px #eee
  max-width: 120px
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis
  cursor: e-resize

  &:active
    max-width: none

.expandable-row
  margin-bottom: 10px

.expanded > .expandable-content
  display: block

.expandable-content
  display: none
