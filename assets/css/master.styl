global-reset()

@import "_variables"
@import "_mixins"
@import "_results"
@import "_layers"
@import "_fonts"
@import "_upload"
@import "_processing"
@import "_footer"

html
  background: $seafoam
  font-family: 'Open Sans', sans-serif;
  transition(all  300ms)
  -webkit-font-smoothing: antialiased

#app
  min-width: 600px

.cl
  clear: both

.left
  float: left

.right
  float: right

#progress
  top: 0
  width: 100%
  background: #d5eaf2
  position: absolute
  height: 16px
  display: none
  .bar
    background: #3aa0cb
    height: 100%
    position: absolute

.subheadline
  color $grey
  font-size: 19px
  line-height: 26px
  font-weight: bold
  &[style]
    font-weight: normal

.text-orb
  border-radius: 3px
  font-size: 13px
  color: $seafoam
  font-weight: bold
  padding: 6px 12px
  display: inline-block
  border: solid 2px $seafoam
  max-width: 120px
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis
  cursor: e-resize

  &:active
    max-width: none

.expandable-row
  margin-bottom: 10px

.expanded > .expandable-content
  display: block

.expandable-content
  display: none
