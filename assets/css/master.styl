global-reset()

@import "_variables"
@import "_mixins"
@import "_results"
@import "_layers"
@import "_fonts"
@import "_upload"
@import "_footer"

.cl
  clear: both

.left
  float: left

.right
  float: right

.subheadline
  color $grey
  font-size: 19px
  line-height: 26px

.text-orb
  border-radius: 4px
  font-size: 16px
  color: $grey
  font-weight: 200
  padding: 6px 12px
  display: inline-block
  border: solid 2px #eee

.app-headline
  text-align: center
  color: $grey
  font-size: 200%
  border-bottom: solid 1px $seafoam
  padding: $block_size * 0.25 0
  font-weight: 100

.expandable-row
  margin-bottom: 10px

.expandable-content
  display: none

html
  font-family: helvetica
  font-weight: 400
  font-size: $large_font
  transition(all  300ms)

  @media screen and (max-width: 600px)
    font-size: $large_font * 0.6

#app
  padding-bottom: $footer_height
